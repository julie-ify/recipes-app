<div class="table-container">
  <table class="table is-fullwidth">
    <thead>
      <tr>
        <th>Food</th>
        <th title="measurement">Measurement unit</th>
        <th title="price">Unit price</th>
        <th>Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @foods.each do |food| %>
        <tr>
          <th><%= food.name %></th>
          <td><%= food.measurement_unit %></td>
          <td>$<%= food.price %></td>
          <td><%= link_to 'Delete', food, method: :delete, data: { confirm: 'Are you sure?' }, class: "button is-small is-danger is-light" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>